@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<b>KATEGORİ</b>

<table class="table table-hover">

    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @{
        int i = 1;
    } 
     @foreach (var item in Model) 
     {
        <tr>
            <td>@i</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID/" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a></td>
            <td><a href="/AdminCategory/EditCategory/@item.CategoryID/" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-info">Başlıklar</a></td>
        </tr>
        i++;
    }
</table>
<br />
<a href="/AdminCategory/AddCategory/" class="btn btn-primary">Yeni Kategori</a>