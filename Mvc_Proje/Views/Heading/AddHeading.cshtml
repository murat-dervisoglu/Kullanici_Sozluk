@model EntityLayer.Concrete.Heading
@{
    ViewData["Title"] = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-dark text-white">
                        <h4 class="text-center mb-0">🖋️ Yeni Başlık Ekle</h4>
                    </div>
                    <div class="card-body p-4">
                        <form>
                            <div class="mb-4">
                                @Html.Label("HeadingName", "Başlık", new { @class = "form-label fw-bold" })
                                @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control rounded-pill", placeholder = "Başlığı girin" })
                                @Html.ValidationMessageFor(x => x.HeadingName)
                            </div>

                            <div class="mb-4">
                                @Html.Label("CategoryID", "Ait Olduğu Kategori", new { @class = "form-label fw-bold" })
                                @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new{@class = "form-control"})
                            </div>

                            <div class="mb-4">
                                @Html.Label("WriterID", "Yazarı", new { @class = "form-label fw-bold" })
                                @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
                            </div>

                            <div class="d-grid gap-2">  
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                                <button type="button" class="btn btn-light" onclick="history.back()">Geri</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}