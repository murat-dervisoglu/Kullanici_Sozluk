@model EntityLayer.Concrete.Heading

@{
	ViewData["Title"] = "EditHeading";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<br />
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card shadow-lg border-0">
					<div class="card-header bg-dark text-white">
						<h4 class="text-center mb-0">🖋️Başlık Düzenle</h4>
					</div>
					<div class="card-body p-4">
						<form>
							@Html.HiddenFor(x => x.HeadingID)
							@Html.HiddenFor(x => x.WriterID)
							@Html.HiddenFor(x => x.HeadingStatus)
							<div class="mb-4">
								@Html.Label("HeadingName", "Başlık", new { @class = "form-label fw-bold" })
								@Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control rounded-pill", placeholder = "Başlığı girin" })
								@Html.ValidationMessageFor(x => x.HeadingName)
							</div>

							<div class="mb-4">
								@Html.Label("CategoryID", "Ait Olduğu Kategori", new { @class = "form-label fw-bold" })
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
							</div>

							<div class="d-grid gap-2">
								<button type="submit" class="btn btn-primary">Kaydet</button>
								<button type="button" class="btn btn-light" onclick="history.back()">Geri</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
}
